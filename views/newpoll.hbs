<div id="new-poll-page" class="section">
    <h1>Create A New Poll</h1>
    <form id="new-poll-form" class="pure-form-stacked">
        <label>
            Title:
            <input id="new-poll-title" form="new-poll-form" type="text">
        </label>
        
        <label>
            Options (seperated by lines):
            <textarea id="new-poll-options" name="new-poll-options" cols="30" rows="10"></textarea>
        </label>
        
        <button id="new-poll-submit-btn" class="pure-button pure-button-primary">Add Poll</button>
    </form>
</div>

<script type="text/javascript" src="/src/javascripts/new-poll-ui.js"></script> 