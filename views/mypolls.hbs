<div id="my-polls-page" class="section pure-g">
    <div class="card pure-u-1 pure-u-xl-1-2">
        <h1>My Polls:</h1>
        <ul class="poll-list pure-menu-list">
            {{#each myPolls}}
            <li id={{this._id}} class="poll-list-item"><a href='/polls/user/{{this._id}}' class="pure-menu-link">{{this.name}}</a></li>
            {{/each}}
        </ul>
    </div>    
</div>

