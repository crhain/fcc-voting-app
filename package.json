{
  "name": "fcc-voting-app",
  "version": "1.0.1",
  "description": "A voting app for freeCodeCamp back-end certificate",
  "main": "server.js",
  "homepage": "https://github.com/crhwebdev/fcc-voting-app",
  "directories": {
    "doc": "docs"
  },
  "engines": {
    "node": "10.11.0"
  },
  "scripts": {
    "start": "node app.js",
    "dev": "nodemon app.js debug",
    "build": "npm-run-all clean:dist make:dist build:css build:js",
    "clean:dist": "rimraf public/dist -rf",
    "make:dist": "mkdirp public/dist/stylesheets public/dist/javascripts",
    "build:css": "npm-run-all compile:sass prefix:css compress:css",
    "build:js": "uglifyjs public/src/javascripts/poll-ui.js -o public/dist/javascripts/poll-ui.js -c -m --source-map",
    "compile:sass": "node-sass public/src/stylesheets/sass/main.scss public/dist/stylesheets/style.comp.css",
    "prefix:css": "postcss public/dist/stylesheets/style.comp.css --use autoprefixer -o public/dist/stylesheets/style.prefix.css",
    "compress:css": "node-sass public/dist/stylesheets/style.prefix.css public/dist/stylesheets/style.prefix.css/style.css --output-style compressed",
    "watch:sass": "node-sass public/src/stylesheets/sass/main.scss public/dist/stylesheets/style.css -w",
    "devserver": "nodemon -r dotenv/config app.js debug",
    "start:dev": "npm-run-all --parallel devserver watch:sass",
    "test": "mocha tests/**.spec.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/crhwebdev/fcc-voting-app.git"
  },
  "author": "Carl Hain",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/crhwebdev/fcc-voting-app/issues"
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "connect-flash": "^0.1.1",
    "cookie-parser": "^1.4.3",
    "ejs": "^2.5.7",
    "express": "^4.16.3",
    "express-session": "^1.15.6",
    "hbs": "^4.0.1",
    "hoek": "^5.0.3",
    "method-override": "^2.3.10",
    "mongodb": "^2.2.27",
    "mongoose": "^5.0.3",
    "mongoose-findorcreate": "^2.0.0",
    "passport": "^0.3.2",
    "passport-local": "^1.0.0",
    "passport-local-mongoose": "^4.4.0",
    "passport-twitter": "^1.0.4"
  },
  "devDependencies": {
    "autoprefixer": "^7.1.1",
    "babel-preset-env": "^1.7.0",
    "chai": "^4.1.2",
    "cssnano": "^3.10.0",
    "dotenv": "^5.0.0",
    "mkdirp": "^0.5.1",
    "mocha": "^5.2.0",
    "ncp": "^2.0.0",
    "node-sass": "^4.9.3",
    "nodemon": "^1.18.4",
    "npm-run-all": "^4.1.2",
    "postcss-cli": "^6.0.0",
    "rimraf": "^2.6.2",
    "uglify-js": "^3.4.9",
    "watch": "^1.0.2",
    "watch-cli": "^0.2.3"
  }
}
